{
    "name": "Frontend DevContainer",
    "context": "../../frontend",
    "dockerFile": "Dockerfile",
    // @see https://containers.dev/features
    "features": {
    },
    "appPort": [3000],
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "saoudrizwan.claude-dev",
                "streetsidesoftware.code-spell-checker",
                "editorconfig.editorconfig",
                "mhutchie.git-graph",
                "github.copilot",
                "github.copilot-chat",
                "eamodio.gitlens",
                "oderwat.indent-rainbow",
                "bierner.markdown-mermaid",
                "gruntfuggly.todo-tree"
            ],
            "terminal.integrated.defaultProfile.windows": "zsh (login)",
            "terminal.integrated.profiles.linux": {
                "zsh (login)": {
                    "path": "zsh",
                    "args": ["-l"]
                }
            }
        }
    },
    "initializeCommand": "echo 'Initializing...'",
    "onCreateCommand": "echo 'Creating container...'",
    "updateContentCommand": "echo 'Updating container...'",
    "postCreateCommand": "echo 'Created container. \nWaiting for execution of postStartCommand...'",
    "postStartCommand": "echo 'Executing postStartCommand...' && .devcontainer/postStartCommand.sh"
}